<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Set corner radius if you need rounded corners -->
            <solid android:color="#D3D3D3" /> <!-- Background color -->
            <size android:height="10dp" /> <!-- Adjust height for desired track thickness -->
        </shape>
    </item>
    <!-- Foreground progress track -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" />
                <solid android:color="@color/bg_blue" /> <!-- Foreground progress color -->
                <size android:height="10dp" /> <!-- Same height as background for consistent thickness -->
            </shape>
        </clip>
    </item>
</layer-list>
