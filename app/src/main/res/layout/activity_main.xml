<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_return"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:padding="0dp"
        android:scaleType="center"
        android:elevation="6dp" />

    <!-- Custom reset button added here -->
    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_refresh"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:padding="0dp"
        android:scaleType="center"
        android:elevation="6dp" />



    <fragment
        android:id="@+id/arFragment"
        android:name="com.example.draw.WritingArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Instructional Overlay at the Top -->


    <com.example.draw.InstructionOverlay
        android:id="@+id/instructionOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="86dp" />

    <LinearLayout
        android:id="@+id/topBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="0dp">

        <ImageButton
            android:id="@+id/questionButton"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Help"
            android:elevation="6dp"
            android:src="@drawable/question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/corner_radius"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioGroup
                    android:id="@+id/topButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <!-- Auto Option -->
                    <RadioButton
                        android:id="@+id/radioAuto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button_text_selector"
                        android:button="@null"
                        android:checked="true"
                        android:padding="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Auto"
                        android:textColor="@android:color/white" />

                    <!-- Manual Option -->
                    <RadioButton
                        android:id="@+id/radioManual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radio_button_text_selector"
                        android:button="@null"
                        android:padding="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Manual"
                        android:textColor="@color/bg_blue" />

                </RadioGroup>
            </LinearLayout>

        </LinearLayout>


        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:elevation="10dp"
            android:src="@drawable/cta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/24"
        android:textSize="14sp"
        android:background="@drawable/progress_bg"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/topBar"
        android:layout_alignEnd="@id/topBar"
        android:visibility="gone"
        android:elevation="6dp" />


    <com.example.draw.SimpleInstructionOverlay
        android:id="@+id/captureSimpleInstructionOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="12dp"
        android:visibility="gone" />






    <com.example.draw.SimpleInstructionOverlay
        android:id="@+id/simpleInstructionOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomBar"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/simpleInstructionOverlay"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieArrowLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleX="-1"
            app:lottie_fileName="right.json"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgPhones"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/mobile"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieArrowRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"
            app:lottie_fileName="right.json" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageCarousel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/bottomBar"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/heightControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="invisible"
        android:padding="16dp">

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:gravity="center">-->

        <!--            <Button-->
        <!--                android:id="@+id/captureButton"-->
        <!--                android:layout_width="0dp"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_weight="1"-->
        <!--                android:text="Capture Photo" />-->

        <!--            <Button-->
        <!--                android:id="@+id/autoCaptureButton"-->
        <!--                android:layout_width="0dp"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_weight="1"-->
        <!--                android:text="Auto Capture"-->
        <!--                android:onClick="onAutoCaptureClicked"-->
        <!--                />-->

        <!--            <Button-->
        <!--                android:id="@+id/startRecordingButton"-->
        <!--                android:layout_width="0dp"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_weight="1"-->
        <!--                android:text="Start Recording" />-->

        <!--            <Button-->
        <!--                android:id="@+id/stopRecordingButton"-->
        <!--                android:layout_width="0dp"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_weight="1"-->
        <!--                android:text="Stop Recording"-->
        <!--                android:visibility="gone" />-->

        <!--        </LinearLayout>-->

        <SeekBar
            android:id="@+id/seekBarHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="90"
            android:progress="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDecreaseHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <Button
                android:id="@+id/btnIncreaseHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />

        </LinearLayout>


        <Button
            android:id="@+id/buttonContinue"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/proceed_bg"
            android:text="Proceed"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D212F"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4dp">

                <RadioButton
                    android:id="@+id/radioCamera"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_camera_selector"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/camera_gray"
                    android:padding="10dp" />

                <RadioButton
                    android:id="@+id/radioVideo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_video_selector"
                    android:button="@null"
                    android:drawableTop="@drawable/video_gray"
                    android:padding="10dp" />
            </RadioGroup>

        </LinearLayout>


        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/shutter"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/shutter"
            android:contentDescription="Capture" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/proceedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/proceed_bg"
            android:text="Proceed"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>
