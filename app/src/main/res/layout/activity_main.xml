<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_return"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:scaleType="center"
        android:elevation="6dp" />

    <!-- Custom reset button added here -->
    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_refresh"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:scaleType="center"
        android:elevation="6dp" />

    <fragment
        android:id="@+id/arFragment"
        android:name="com.example.draw.WritingArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Instructional Overlay at the Top -->

    <com.example.draw.InstructionOverlay
        android:id="@+id/instructionOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="70dp" />



    <LinearLayout
        android:id="@+id/heightControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="invisible"
        android:padding="16dp">

        <SeekBar
            android:id="@+id/seekBarHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="90"
            android:progress="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDecreaseHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <Button
                android:id="@+id/btnIncreaseHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/heightControls"
        android:visibility="gone" />
</RelativeLayout>