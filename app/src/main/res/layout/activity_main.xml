<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_return"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:scaleType="center"
        android:elevation="6dp" />

    <!-- Custom reset button added here -->
    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/fab_background"
        android:src="@drawable/ic_refresh"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="0dp"
        android:scaleType="center"
        android:elevation="6dp" />

    <fragment
        android:id="@+id/arFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Instructional Overlay at the Top -->

    <com.example.draw.InstructionOverlay
        android:id="@+id/instructionOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="70dp" />




    <com.example.draw.SimpleInstructionOverlay
        android:id="@+id/simpleInstructionOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/heightControls"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/simpleInstructionOverlay"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieArrowLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:scaleX="-1"
            app:lottie_fileName="right.json"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgPhones"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/mobile"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieArrowRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="gone"
            app:lottie_fileName="right.json" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageCarousel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/heightControls"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D212F"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!--            <com.google.android.material.card.MaterialCardView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:cardCornerRadius="8dp"-->
            <!--                app:cardElevation="0dp"-->
            <!--                app:strokeWidth="0dp"-->
            <!--                android:background="@android:color/transparent">-->

            <!--                <LinearLayout-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:orientation="horizontal"-->
            <!--                    android:background="@android:color/white"-->
            <!--                    android:padding="4dp">-->

            <!--                    <ImageButton-->
            <!--                        android:id="@+id/cameraButton"-->
            <!--                        android:layout_width="48dp"-->
            <!--                        android:layout_height="48dp"-->
            <!--                        android:src="@drawable/camera"-->
            <!--                        android:background="@drawable/camera_bg"-->
            <!--                        android:contentDescription="Camera"-->
            <!--                        android:padding="12dp"/>-->

            <!--                    <Space-->
            <!--                        android:layout_width="4dp"-->
            <!--                        android:layout_height="match_parent" />-->

            <!--                    <ImageButton-->
            <!--                        android:id="@+id/videoButton"-->
            <!--                        android:layout_width="48dp"-->
            <!--                        android:layout_height="48dp"-->
            <!--                        android:src="@drawable/video"-->
            <!--                        android:background="@android:color/transparent"-->
            <!--                        android:contentDescription="Video"-->
            <!--                        android:padding="12dp"/>-->
            <!--                </LinearLayout>-->
            <!--            </com.google.android.material.card.MaterialCardView>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <RadioButton
                        android:id="@+id/radioCamera"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_camera_selector"
                        android:button="@null"
                        android:checked="true"
                        android:drawableTop="@drawable/camera_gray"
                        android:padding="10dp" />

                    <RadioButton
                        android:id="@+id/radioVideo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_video_selector"
                        android:button="@null"
                        android:drawableTop="@drawable/video_gray"
                        android:padding="10dp" />
                </RadioGroup>

            </LinearLayout>


            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/captureButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/shutter"
                android:contentDescription="Capture" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/proceedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/proceed_bg"
                android:text="Proceed"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/heightControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="invisible"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!--            <Button-->
            <!--                android:id="@+id/captureButton"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="1"-->
            <!--                android:text="Capture Photo" />-->

            <Button
                android:id="@+id/autoCaptureButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto Capture"
                android:onClick="onAutoCaptureClicked"
                />

            <Button
                android:id="@+id/startRecordingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Recording" />

            <Button
                android:id="@+id/stopRecordingButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop Recording"
                android:visibility="gone" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="90"
            android:progress="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDecreaseHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <Button
                android:id="@+id/btnIncreaseHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />

        </LinearLayout>

        <Button
            android:id="@+id/ButtonContinue"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/proceed_bg"
            android:text="Proceed"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>
